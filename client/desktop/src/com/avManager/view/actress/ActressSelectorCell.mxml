<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="125" height="145" xmlns:actress="com.avManager.view.actress.*">
	<fx:Script>
		<![CDATA[
			import com.avManager.model.data.Actress;
			private var _actress:Actress;
			
			private var _isSelected:Boolean;
			
			public function get isSelected():Boolean
			{
				return _isSelected;
			}

			public function set isSelected(value:Boolean):void
			{
				_isSelected = value;
			}

			public function get actress():Actress
			{
				return _actress;
			}
			
			public function set actress(value:Actress):void
			{
				_actress = value;
				_cell.actress = value;
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<actress:ActressCell id="_cell"/>
	<s:Image source="@Embed('assets/selected.png')"/>
</s:Group>
